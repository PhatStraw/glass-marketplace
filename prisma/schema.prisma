generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = "mysql://root@127.0.0.1:3309/glass-marketplace"
  relationMode = "prisma"
}

model Item {
  id        String     @id @default(uuid())
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  title     String
  content   String
  type      GlassType @default(RECYCLER)
  images    Image[]
  published Boolean   @default(false)
  likes     Int       @default(0)
  artist    String
  color     String
  owner     User      @relation(name: "owneritems", fields: [userId], references: [id], map: "item_owner")
  favbyuser User[]    @relation(name: "favorites")
  userId    String

  @@index([userId])
}

model Image {
  id     String @id @default(uuid())
  url    String 
  item   Item?  @relation(fields: [itemId], references: [id])
  itemId String?

  @@index([itemId])
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  items     Item[]   @relation(name: "owneritems")
  favorites Item[]   @relation(name: "favorites")
}

enum Role {
  USER
  ADMIN
}

enum GlassType {
  RECYCLER
  INCLINE
  TORUS
  NAIL
}
